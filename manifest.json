{
  "name": "Ferramenta Fusion DEV",
  "version": "1.10",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/fusion/*"
      ],
      "exclude_matches": [
        "*://*/fusion/adm/*",
        "*://*/fusion/portal"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "menu.css"
      ]
    }
  ],
  "action": {
    "default_title": "Fusion DEV",
    "default_popup": "popup.html"
  }
}